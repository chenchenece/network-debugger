!!! 5
html(lang='en')
  head
    title Network Debugger
    link(rel='stylesheet', type='text/css', href='style.css')
  body
    .background
      .header
        img(src='images/spotterrf-labs-white-logo.png', alt='')
        h1 Network Debugger
      .container
          ul.css-tab-menu
            li.js-ui-tab.js-http
              a(href='/http') HTTP
            li.js-ui-tab.js-tcp
              a(href='/tcp') TCP
            li.js-ui-tab.js-udp
              a(href='/udp') UDP

          .js-ui-tab-view.css-ui-tab-view.js-all.css-inactive(data-name='tcp')
            p Enter the port to listen on and click 'Listen'
            .css-listen-form
              input.js-portNum.js-tcp.css-portNum(type='text')(data-protocol='tcp')
              a.css-button.css-openSocket.js-openSocket.js-tcp(data-protocol='tcp') Listen
            .css-connection-info
              .css-connection-status.js-tcp-connection-status.off Connection Status
              div Listening to
                span.css-connection-count.js-tcp-connection-count 0
                span devices
            .css-top.right
              input.js-tcp-multifile(type="checkbox")(checked="true")
              p Save each packet seperately
              a.css-button.js-log.css-log.js-tcp(data-protocol='tcp')
            .js-tcp-stream.js-all-stream.css-stream
              span.js-allstream-error
            div.css-left.css-bottom
              a.css-button.css-closeSocket.js-closeSocket.js-tcp(data-protocol='tcp') Close Connection
            div.css-center.css-bottom
              a.css-button.js-clear.js-tcp(data-protocol='tcp') Clear
            div.css-right.css-bottom
              p Lock scroll to bottom
              input.js-scroll.js-tcp(type="checkbox")(checked="true")(data-protocol='tcp')

          .js-ui-tab-view.css-ui-tab-view.js-all.css-inactive(data-name='http')
            p.css-enter-port Enter the port to listen on and click 'Listen'
            .css-log-options
              input.js-include-headers(type="checkbox")(checked="false")
              p Save headers
            .css-listen-form
              input.js-portNum.js-http.css-portNum(type='text')(data-protocol='http')
              a.css-button.css-openSocket.js-openSocket.js-http(data-protocol='http') Listen
            .css-connection-info
              .css-connection-status.js-http-connection-status.off Connection Status
            .css-top.right
              p Save each packet seperately
              input.js-http-multifile(type="checkbox")(checked="true")
              a.css-button.js-log.js-http.css-log(data-protocol='http')
            .js-http-stream.js-all-stream.css-stream
              span.js-allstream-error
            div.css-left.css-bottom
              a.css-button.css-closeSocket.js-closeSocket.js-http(data-protocol='http') Close Connection
            div.css-center.css-bottom
              a.css-button.js-clear.js-http(data-protocol='http') Clear
            div.css-right.css-bottom
              p Lock scroll to bottom
              input.js-scroll.js-http(type="checkbox")(checked="true")(data-protocol='http')

          .js-ui-tab-view.css-ui-tab-view.js-all.css-inactive(data-name='udp')
            p Enter the port to listen on and click 'Listen'
            .css-listen-form
              input.js-portNum.js-udp.css-portNum(type='text')(data-protocol='udp')
              a.css-button.css-openSocket.js-openSocket.js-udp(data-protocol='udp') Listen
            .css-connection-info
              .css-connection-status.js-udp-connection-status.off Connection Status
            .css-top.right
              p Save each packet seperately
              input.js-udp-multifile(type="checkbox")(checked="true")
              a.css-button.js-log.css-log.js-udp(data-protocol='udp')
            .js-udp-stream.js-all-stream.css-stream
              span.js-allstream-error
            div.css-left.css-bottom
              a.css-button.css-closeSocket.js-closeSocket.js-udp(data-protocol='udp') Close Connection
            div.css-center.css-bottom
              a.css-button.js-clear.js-udp(data-protocol='udp') Clear
            div.css-right.css-bottom
              p Lock scroll to bottom
              input.js-scroll.js-udp(type="checkbox")(checked="true")(data-protocol='udp')

      span.js-message-template
        span
        br
      span.js-timestamp-template
        .css-streamTime
      span.js-code-template
        pre
          span
          code.highlight-me

script(src='./vendor/highlight.pack.js', type='text/javascript')
script(src='pakmanaged.js', type='text/javascript')
